@value = [{{#each face.values as |code value|}}_{{ value }} {{/each}}];
@value.clip = [{{#each clip as |code value|}}{{#if value}}_{{ value }}.clip {{/if}}{{/each}}];

anchorDef 0 0 entry;

feature mark {
  pos cursive [@value @value.clip] <anchor entry> <anchor NULL>;
  pos cursive up <anchor entry> <anchor 0 {{upm 1 }}>;
  pos cursive down <anchor entry> <anchor 0 -{{upm 1 }}>;
} mark;
