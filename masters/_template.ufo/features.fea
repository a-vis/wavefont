languagesystem DFLT dflt;

@value = [{{#each values}}_{{ this }} {{/each}}];


anchorDef 0 {{ baseline }} entry;
anchorDef {{ width }} {{ baseline }} exit;

feature mark {
  pos cursive @value <anchor entry> <anchor exit>;
  pos cursive up <anchor entry> <anchor 0 1>;
  pos cursive down <anchor entry> <anchor 0 -1>;
} mark;
